<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailActivity">

    <include layout="@layout/toolbar_layout"
             android:id="@+id/include"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/loading_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/imageDetailCharacter"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personagem"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:id="@+id/title_character"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageDetailCharacter" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/description_character"
            app:layout_constraintTop_toBottomOf="@+id/title_character" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/button_backpage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:padding="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>